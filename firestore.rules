rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc.data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      // Allow users to read their own document
      allow read: if request.auth.uid == userId;
      
      // Allow admins to read all user documents
      allow read: if isAdmin();
      
      // Allow users to create their own account (during registration)
      allow create: if request.auth.uid == userId;
      
      // Allow users to update their own profile (but not role/suspended fields)
      allow update: if request.auth.uid == userId && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'suspended', 'suspendedAt']);
      
      // Allow admins to update any user (role, suspension status, etc)
      allow update: if isAdmin();
    }

    // Campaigns collection - allow authenticated users
    match /campaigns/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /analytics/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Transactions subcollection - users can manage their own transactions
    match /users/{userId}/transactions/{transactionId} {
      // Allow users to read their own transactions
      allow read: if request.auth != null && request.auth.uid == userId;

      // Allow users to create and update their own transactions
      allow create, update: if request.auth != null && request.auth.uid == userId;

      // Allow admins to read all transactions
      allow read: if isAdmin();
    }

    // Services collection
    match /services/{serviceId} {
      // Allow authenticated users to read enabled services
      allow read: if request.auth != null && 
        (resource.data.enabled == true || isAdmin());
      
      // Only admins can create, update, or delete services
      allow create, update, delete: if isAdmin();
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}