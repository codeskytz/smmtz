rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc.data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      // Allow users to read their own document
      allow read: if request.auth.uid == userId;
      
      // Allow admins to read all user documents
      allow read: if isAdmin();
      
      // Allow authenticated users to query users by referralCode (for referral validation)
      // This is needed for checking if referral codes exist
      allow list: if request.auth != null;
      
      // Allow users to create their own account (during registration)
      allow create: if request.auth.uid == userId;
      
      // Allow users to update their own profile (but not role/suspended/referral fields)
      allow update: if request.auth.uid == userId && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'suspended', 'suspendedAt', 'referralCode', 'referrerId']);
      
      // Allow users to update their own referralEarnings and totalReferrals
      // This is needed for the referral system to credit earnings
      // We validate that only these specific fields are being updated and values are valid
      allow update: if request.auth.uid == userId &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['referralEarnings', 'totalReferrals', 'updatedAt']) &&
        request.resource.data.referralEarnings is int &&
        request.resource.data.totalReferrals is int &&
        request.resource.data.referralEarnings >= 0 &&
        request.resource.data.totalReferrals >= 0;
      
      // Allow users to update other users' referralEarnings and totalReferrals
      // This is needed when crediting referrers with commission
      // NOTE: This is a security consideration - ideally this should be done via Cloud Functions
      // For now, we allow it but validate that only referral fields are updated and values increase
      allow update: if request.auth != null &&
        request.auth.uid != userId &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['referralEarnings', 'totalReferrals', 'updatedAt']) &&
        request.resource.data.referralEarnings is int &&
        request.resource.data.totalReferrals is int &&
        request.resource.data.referralEarnings >= (resource.data.referralEarnings == null ? 0 : resource.data.referralEarnings) &&
        request.resource.data.totalReferrals >= (resource.data.totalReferrals == null ? 0 : resource.data.totalReferrals);
      
      // Allow admins to update any user (role, suspension status, etc)
      allow update: if isAdmin();
    }

    // Campaigns collection - allow authenticated users
    match /campaigns/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /analytics/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Transactions subcollection - users can manage their own transactions
    match /users/{userId}/transactions/{transactionId} {
      // Allow users to read their own transactions
      allow read: if request.auth != null && request.auth.uid == userId;

      // Allow users to create and update their own transactions
      allow create, update: if request.auth != null && request.auth.uid == userId;

      // Allow admins to read all transactions
      allow read: if isAdmin();
    }

    // Orders subcollection - users can manage their own orders
    match /users/{userId}/orders/{orderId} {
      // Allow users to read their own orders
      allow read: if request.auth != null && request.auth.uid == userId;

      // Allow users to create their own orders
      allow create: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.data.cost is int &&
        request.resource.data.quantity is int;

      // Allow users to update their own orders (for status updates)
      allow update: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.data.diff(resource.data).affectedKeys().hasAny(['status', 'updatedAt']);

      // Allow admins to read all orders
      allow read: if isAdmin();
      
      // Allow admins to update any order
      allow update: if isAdmin();
    }

    // Withdrawals collection
    match /withdrawals/{withdrawalId} {
      // Allow users to read their own withdrawals
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;

      // Allow users to create their own withdrawal requests
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId &&
        request.resource.data.amount is int &&
        request.resource.data.status == 'pending';

      // Allow admins to read all withdrawals
      allow read: if isAdmin();

      // Allow admins to update withdrawal status
      allow update: if isAdmin() &&
        request.resource.data.diff(resource.data).affectedKeys().hasAny(['status', 'updatedAt', 'processedAt']);
    }

    // Services collection
    match /services/{serviceId} {
      // Allow authenticated users to read services
      // Users can only see enabled services (filtered in query)
      // Admins can see all services
      allow read: if request.auth != null;
      
      // Only admins can create, update, or delete services
      allow create, update, delete: if isAdmin();
    }
    
    // Allow listing services (for queries)
    match /services {
      // Allow authenticated users to query services
      allow list: if request.auth != null;
    }

    // Helper function to check if user exists (for referral code queries)
    function userExists(userId) {
      return exists(/databases/$(database)/documents/users/$(userId));
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}